<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titre_main_ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:text="MAIN ACTIVITY TP3"
        android:textColor="#88ffff00"
        android:layout_marginBottom="8dp"
        android:textSize="35dp" />

    <Button
        android:id="@+id/bntgotoq1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Go to question 1-3" />

    <Button
        android:id="@+id/bntgotoq4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Go to question 4" />

    <Button
        android:id="@+id/bntgotoq_5_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Go to question 5_6" />

    <Button
        android:id="@+id/bntgotoq_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Go to question 7" />

    <LinearLayout
        android:layout_width="286dp"
        android:background="@color/black"
        android:layout_height="78dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titre_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="owner:"
            android:textColor="#88ffff00"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/titre_name1"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="KONE WOLOUHO OUMAR"
            android:textColor="#88ffff00"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/titre_name2"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="ANGORA KOUAME ISRAEL"
            android:textColor="#88ffff00"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bntexit_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Exit activity" />

</LinearLayout>